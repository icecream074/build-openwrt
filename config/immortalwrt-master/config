# 1. 目标架构与设备（必须对应 AR9341）
CONFIG_TARGET_ath79=y                  # 大架构（AR9341 属于 ath79 平台）
CONFIG_TARGET_ath79_generic=y          # 子架构
CONFIG_TARGET_ath79_generic_DEVICE_tplink_tl-wr800n-v1=y  # 精确匹配 WR800N V1 设备

# 2. 基本系统配置（保证能启动、联网）
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_cgi-io=y
CONFIG_PACKAGE_dropbear=y              # SSH 服务（用于管理）
CONFIG_PACKAGE_firewall=y              # 防火墙
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE_kmod-ath9k=y            # AR9341 无线驱动（必须选）
CONFIG_PACKAGE_kmod-gpio-button-hotplug=y  # 物理按键驱动（如复位键）
CONFIG_PACKAGE_libc=y
CONFIG_PACKAGE_libgcc=y
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_mtd=y
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_procps-ng=y
CONFIG_PACKAGE_uboot-envtools=y
CONFIG_PACKAGE_uci=y                   # OpenWRT 配置工具
CONFIG_PACKAGE_uclient-fetch=y
CONFIG_PACKAGE_wpad-basic-wolfssl=y    # 无线认证（支持 WPA/WPA2）

# 3. 可选：添加 LuCI 图形界面（方便可视化管理）
CONFIG_PACKAGE_luci=y                  # LuCI 核心
CONFIG_PACKAGE_luci-app-firewall=y     # 防火墙图形配置
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y  # LuCI 中文语言包
CONFIG_PACKAGE_luci-lib-base=y
CONFIG_PACKAGE_luci-lib-ipkg=y
CONFIG_PACKAGE_luci-mod-admin-full=y   # 完整管理功能
CONFIG_PACKAGE_luci-mod-network=y
CONFIG_PACKAGE_luci-mod-status=y
CONFIG_PACKAGE_luci-mod-system=y
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_luci-theme-bootstrap=y  # 默认主题

# 4. 可选：添加实用工具（根据需求选）
CONFIG_PACKAGE_opkg=y                  # 软件包管理工具
CONFIG_PACKAGE_ping=y
CONFIG_PACKAGE_tcpdump=y               # 网络抓包工具
CONFIG_PACKAGE_wget=y
